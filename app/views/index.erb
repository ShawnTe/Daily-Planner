
<div class="flex-item">
  <h1>A Visual Planner<br>
      <% d = Time.now %>
      <%= d.strftime("%e %B") %>
    </h1>
  <div id="notes">
  </div>
</div>

<div class="flex-item white" >
<!--   <div class="container"> -->
    <div class="day_layout">
      <div class="box routine">
        <p class="text-box">
          Morning Routine
        </p>

      </div>
      <div class="box high">
        <p class="text-box">
          High Brain Juice
        </p>

      </div>
      <div class="box routine">
        <p class="text-box">
          Lunch
        </p>

      </div>
      <div class="box medium">
        <p class="text-box">
          Medium Brain Juice
        </p>

      </div>
      <div class="box low">
        <p class="text-box">
         Low Brain Juice
        </p>

      </div>
    <!-- close day layout   -->
    </div>
<input id="btn-structure" type="button" value="Done with structuring day">

  <!-- close container -->
<!--   </div> -->
<!-- close flex-item -->
</div>

<div class="flex-item" id="right-side">
<div id="dialog">
    <form action="/todos" method="post" id="new-todo-form">
      <input type="text" placeholder="Whatcha need to do?" name="todo[name]">
      <select name="todo[time_est]" id="time-est">
        <option>5 min</option>
        <option>15 min</option>
        <option>30 min</option>
        <option>60 min</option>
      </select>
      <select name="todo[brainjuice_id]" id="bj-new-todo">
        <option>Medium</option>
        <option>High</option>
        <option>Low</option>
      </select>
      <input type="submit">
    </form>
  </div>
<input id="button" type="button" value="Create new todo">

  <!-- <a href="/todos/new">Create new todo</a> -->


    <% if @todos %>
    <ul id="high">
      <h3>High</h3>
      <% @todos.each do |task| %>
        <% if task.brainjuice_id == 1 %>
        <li><input type="checkbox" name="<%= task.id %>" class="todo-completed">
          (<%= task.time_est%> <em>min</em>) &nbsp; <%= task.name %>
        </li>
        <% end %>
      <% end %>
    </ul>

    <ul id="medium">
      <h3>Medium</h3>
      <% @todos.each do |task| %>
        <% if task.brainjuice_id == 2 %>
        <li><input type="checkbox" name="todo-completed">
          (<%= task.time_est%> <em>min</em>) &nbsp; <%= task.name %>
        </li>
        <% end %>
      <% end %>
    </ul>

    <ul id="low">
      <h3>Low</h3>
      <% @todos.each do |task| %>
        <% if task.brainjuice_id == 3 %>
        <li><input type="checkbox" name="todo-completed">
            (<%= task.time_est%> <em>min</em>) &nbsp; <%= task.name %>
        </li>
        <% end %>
      <% end %>
    </ul>
<% end %>

</div>
