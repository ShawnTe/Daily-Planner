<form action="/todos" method="post">
  <input type="text" placeholder="Whatcha need to do?" name="todo[name]">
  <select name="todo[time_est]" id="time-est">
    <option>5 min</option>
    <option>15 min</option>
    <option>30 min</option>
    <option>60 min</option>
  </select>
  <select name="todo[brainjuice_id]" id="bj-new-todo">
    <option>Medium</option>
    <option>High</option>
    <option>Low</option>
  </select>
  <input type="submit">
</form>
